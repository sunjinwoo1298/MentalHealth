# Environment Variables

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/mental_health_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=mental_health_db
DATABASE_USER=username
DATABASE_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Google Cloud & AI
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_CLOUD_PROJECT=your-project-id

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
DATA_ENCRYPTION_ALGORITHM=aes-256-gcm

# Server Configuration
NODE_ENV=development
BACKEND_PORT=3001
AI_SERVICES_PORT=8000
AI_SERVICE_URL=http://localhost:5010
FRONTEND_URL=http://localhost:3000

# Redis (for session management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Crisis Intervention
CRISIS_HOTLINE_NUMBER=+91-9152987821
EMERGENCY_CONTACT_EMAIL=crisis@mentalhealth-ai.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Professional Network
THERAPIST_VERIFICATION_API=your-verification-service-url
THERAPIST_BOOKING_API=your-booking-service-url

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info
